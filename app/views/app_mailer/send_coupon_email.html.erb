<%@cup =  @coupon.coupons.find_by(sent: nil) %>
<% if @cup %>
<%@cup.touch(:sent)%>
<%@cup.update_column(:recipient, @email) %>
<%@cup.update_column(:ip, @ip) %>
<%@cup.update_column(:ip2, @ip2) %>
<%@cup.update_column(:full_name, @full_name) %>
<% available = @cup.serie.coupons.where(sent: nil).count 
	if available == 0 
		@cup.serie.active = false
		@cup.serie.save
	end
	%>
<h2> Estimado: <%= @cup.full_name%></h2>
<h2> Ha elegido un Cupon de la serie: <%= @cup.serie.name%>, el codigo del cupon es: <%= @cup.serial%> </h2>
<%= link_to "Activa tu Cupon ahora!!!", activate_url(:token => @cup.token)%>

<%else%>
<h1> No more Coupons </h1>
<%end%>