<h1>Listing Series</h1>

<%= link_to 'New Serie', new_series_path, class: "btn btn-primary btn-sm" %>
</br>
</br>
<table class='table'>
  <thead>
    <tr>

      <th>Name</th>
      <th>Created</th>
      <th>Value</th>
      <th>Currency</th>
      <th>Total Coupons</th>
      <th>Available Coupons</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |serie|
      available2 = serie.coupons.where(sent: nil).count
     
      status = serie.active ? 'Enabled' : 'Disabled'
    %>
      <tr>
        <td><%= link_to serie.name, serie %></td>
        <td><%= serie.created_at %></td>
        <td><%= serie.value %></td>
        <td><%= serie.currency %></td>
        <td><%= serie.coupons.count %></td>
        <td><%= serie.coupons.where(sent: nil).count %></td>
        <td class='<%=status.downcase%>'><%= status %></td>
        <% unless available2 == 0 %>
        <td><%= link_to 'Enable/Disable', change_path(serie),:method=>:post%></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Log Out', sign_out_path, class: "btn btn-primary btn-sm" %>
<br>


