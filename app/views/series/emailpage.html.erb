<div class="body" align="center" id="emailform">
  <%= form_for(:series) do |f| %>

    <div class="field">
      <%= label :email, "email" %></br>
      <%= email_field :email, "email", :class=>"form-control"%>
    </div>
    <div class="actions">
      <%= f.submit "send", :class => "btn btn-primary" %>
    </div>
  <% end %>
</div>
