<div align="center">
	<span><img id="bbico", src='/logo.png' /><h1 id="h2icon">BBbuy Cupons Admin</h1></span>
	<div class="well" id="login">
	<%= form_tag '/sessions' do %>
	        <%= label_tag :email , nil, :class=>"h3"%>
	        <%= email_field_tag :email, nil, :class=>"form-control", :id=>"emailtext"%>
	        </br>
	        <%= label_tag :password , nil, :class=>"h3"%>
	        <%= password_field_tag :password, nil, :class=>"form-control", :id=>"emailtext" %>
	        </br>
	        <%= submit_tag "Login", class: 'btn btn-primary' %>
	<% end %>
	</div>
</div>